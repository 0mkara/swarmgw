{
  "compilerOptions": {
    "allowJs": false,
    "declaration": true,
    "lib": ["es6", "dom", "es2017"],
    "module": "commonjs",
    "target": "es6",
    "skipLibCheck": true,
    "sourceMap": false,
    "strict": true,
    "rootDir": "src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "types": ["node", "jest"],
    "strictNullChecks": false
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
